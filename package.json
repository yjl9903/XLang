{
  "name": "@xlor/xlang",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/XLang.git"
  },
  "license": "MIT",
  "author": "XLor",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "bin": "xlang.mjs",
  "files": [
    "dist",
    "*.mjs"
  ],
  "scripts": {
    "build": "unbuild",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "release": "bumpp --commit --push --tag && pnpm publish --access public",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "preversion": "unbuild"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "dependencies": {
    "@xlor/xlex": "^1.0.0",
    "@xlor/xparse": "^1.0.0",
    "cac": "^6.7.12"
  },
  "devDependencies": {
    "@types/node": "^17.0.10",
    "bumpp": "^7.1.1",
    "husky": "^4.2.3",
    "lint-staged": "^12.3.0",
    "prettier": "^2.5.1",
    "pseudocode": "^2.1.1",
    "typescript": "^4.3.5",
    "unbuild": "^0.7.2",
    "vitest": "^0.8.1",
    "vuepress": "^1.9.7",
    "vuepress-plugin-mathjax": "^1.2.8"
  },
  "packageManager": "pnpm@6.32.3"
}
